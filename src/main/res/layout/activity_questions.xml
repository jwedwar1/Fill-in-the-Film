<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#090909"
android:orientation="vertical"
tools:context="com.example.james.quizprototype.questions">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/score2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="20dp"
        android:text="Score:"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/right_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="20dp"
        android:text="0"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp" />
</LinearLayout>
<ImageView
    android:id="@+id/movie"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:src="@drawable/alien" />
<EditText
    android:id="@+id/answer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#858484"
    android:hint="Answer"
    android:inputType="text"
    android:textSize="20dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal">
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:onClick="onAnswerClick"
        android:padding="2dp"
        android:text="Submit" />

    <!---cfuck this language and shitty tutorial -->
    <Button
        android:id="@+id/skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:onClick="onSkipClick"
        android:padding="2dp"
        android:text="Skip" />
</LinearLayout>
<TextView
    android:id="@+id/correctornot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:fontFamily="cursive"
    android:text="CORRECT!"
    android:textColor="#FFFDFD"
    android:maxLines="1"
    android:textSize="30dp"/>
<Button
    android:id="@+id/nextbutton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:onClick="onNextClick"
    android:padding="10dp"
    android:text="Next Question" />



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="cursive"
    android:textColor="#FFFDFD"
    android:textSize="30dp"
    android:layout_marginTop="10000dp"
    android:id="@+id/question"/>



</LinearLayout>
